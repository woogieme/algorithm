	<div id="area"></div>
	
	<div>
	  <canvas id="myChart"></canvas>
	</div>
	
	<script type="text/javascript">
	//	let selectColor = document.getElementById('selectColor');
	//	selectColor.onchange = function(){
	//	document.getElementById('area').style.backgroundColor=selectColor.value;
	//	}
	$("#selectColor").on('change',function(){
		$('#area').css('backgroundColor',$("#selectColor").val()); // = document.getElementById('area').style.backgroundColor=selectColor.value; 
	}) // = document.getElementById('selectColor');
	</script>
<script>
  const ctx = document.getElementById('myChart');

  let chart = new Chart(ctx, {
    type: 'bar',
    data: {
      labels: ['Red', 'Blue', 'Yellow', 'Green', 'Purple', 'Orange'],
      datasets: [{
        label: '# of Votes',
        data: [12, 19, 3, 5, 2, 3],
        borderWidth: 1
      }]
    },
    options: {
      scales: {
        y: {
          beginAtZero: true
        }
      }
    }
  });
  
</script>
 
